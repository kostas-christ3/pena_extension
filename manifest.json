{
  "manifest_version": 3,
  "name": "Pena AI",
  "version": "0.1.0",
  "description": "Select text on any page and transform it using AI.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://blinko-brain.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "images": {
    "icon": "images/logo-128.png",
    "icon_48": "images/logo-48.png",
    "icon_16": "images/logo-16.png"
  },
  "options_page": "options.html"
}
